<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/coklattik" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/jakasampurna2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/sd_2" />

    <ImageButton
        android:id="@+id/alamatjakasampurna2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="53dp"
        android:src="@drawable/rumahhhh" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/alamatjakasampurna2"
        android:layout_toRightOf="@+id/alamatjakasampurna2"
        android:text="JL. Patriot Jaka Sampurna, Bekasi, Kec. Bekasi Selatan 
        \n
        \nNo Telepon : (021) 88952771"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:typeface="serif"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
